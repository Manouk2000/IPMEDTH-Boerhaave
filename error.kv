
<RedCircle>:
    BoxLayout:
        canvas:
            Color:
                rgb: 1, 0.1, 0.1, 1
            Ellipse:
                size: (self.width * 0.8) , (self.width * 0.8)
                pos: root.x, root.y
                #pos: [self.center_x - (self.width * 0.8)/2, self.center_y - (self.width * 0.8)/2]
                angle_start: 0
                angle_end: 360

<GreenCircle>:
    BoxLayout:
        canvas:
            Color:
                rgb: 0.15, 1, 0, 1
            Ellipse:
                size: (self.width * 0.8) , (self.width * 0.8)
                pos: root.x, root.y
                #pos: self.pos
                angle_start: 0
                angle_end: 360

<BackDrop>:
    canvas.before:
        Color:
            rgba: (	0.9, 0.9, 0.9,0.3)
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        pos: 10, 10


<ErrorPopUp>:
    tafel: tafel
    backgrounderror: backgrounderror
    AnchorLayout:
        id: backgrounderror
        anchor_x: 'center'
        anchor_y: 'center'
        GridLayout:
            cols: 1
            GridLayout:
                id: tafel
                cols: 4
                size_hint_x: 0.4
            Label:
                text: "Deze voorwerpen staan niet op de juiste plek"
                size_hint_y: 0.5
                font_size: 20
