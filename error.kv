
<RedCircle>:
    BoxLayout:
        canvas:
            Color:
                rgb: 1, 0.1, 0.1, 1
            Ellipse:
                size: (self.width * 0.8) , (self.width * 0.8)
                pos: root.x, root.y
                #pos: [self.center_x - (self.width * 0.8)/2, self.center_y - (self.width * 0.8)/2]
                angle_start: 0
                angle_end: 360

<GreenCircle>:
    BoxLayout:
        canvas:
            Color:
                rgb: 0.15, 1, 0, 1
            Ellipse:
                size: (self.width * 0.8) , (self.width * 0.8)
                pos: root.x, root.y
                angle_start: 0
                angle_end: 360

<BackDrop>:
    canvas.before:
        Color:
            rgba: (	0.9, 0.9, 0.9,0.3)
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        pos: 10, 10


<ErrorPopUp>:
    tafel: tafel
    canvas.before:
        Color:
            rgba: (	0.9, 0.9, 0.9,0.3)
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        canvas.before:
            Color:
                rgba: (	0.1, 0.1, 0.1,1)
            Rectangle:
                pos: [(root.width * 0.7)/6,  (root.height * 0.5)/2]
                size: (root.width * 0.7, root.height * 0.5)
        size: (root.width * 0.7, root.height * 0.5)
        GridLayout:
            id: tafel
            cols: 4
            pos: (root.width * 0.7)/6,  (root.height * 0.5)/2
            size: (500, root.height * 0.5)

        Label:
            text: "Deze voorwerpen staan niet op de juiste plek"
            font_size: 20
            
