<BackDrop>:
    canvas.before:
        Color:
            rgba: (	0.9, 0.9, 0.9,0.3)
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        pos: 10, 10


<ErrorPopUp>:
    #backgrounderror: backgrounderror
    AnchorLayout:
        id: backgrounderror
        anchor_x: 'center'
        anchor_y: 'center'
        pos_hint: {'x': 0, 'top': 1}
        GridLayout:
            cols: 1
            GridLayout:
                #col_force_default: True
                #padding: [50, 0, 0, 0]
                id: tafel
                cols: 3

            Label:
                text: "Deze voorwerpen staan niet op de juiste plek"
                size_hint_y: 0.5
                font_size: 20
