
<RedCircle>:
    GridLayout:
        cols: 1
        spacing: [50, 50]
        id: red_circle
        size_hint_y: None
        height: self.minimum_height
        pos: root.x, root.y
        BoxLayout:
            id: circle_box
            canvas:
                Color:
                    rgb: 1, 0.1, 0.1, 1
                Ellipse:
                    group: 'a'
                    #size: (self.width) , (self.width)
                    size: (self.width * 0.8) , (self.width * 0.8)
                    pos: root.x + self.width * 0.1, root.y + 30
                    angle_start: 0
                    angle_end: 360
        Label:
            id: circle_title
            size_hint_y:0.2
            font_size: 20
            text: "test"

