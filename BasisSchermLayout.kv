
<MyLayout>
  BoxLayout:
    orientation: 'horizontal'
    size: root.width, root.height
    padding: [100, 50, 100, 50]

    canvas.before:
      Rectangle:
        pos: self.pos
        size: self.size
        source: 'images/background_image_stars.png'


    BoxLayout:
      orientation: 'vertical'

      canvas:
        Color:
          rgba: (1,1,1,1)
        Rectangle:
          pos: self.pos
          size: self.size

      BoxLayout:
        orientation: 'vertical'

        size_hint_y: None
        height: dp(300)

        padding: [100, 30, 100, 50]
        spacing: dp(50)

        canvas:
          Color:
            rgba: (21/255,21/255,21/255,1)
          Rectangle:
            pos: self.pos
            size: self.size

        Label:
          id: punten_bovenin
          font_size: 32
          text: "Punten: 0"

        BoxLayout:
          padding: [0, -30, 0, 0]
          ProgressBar:
            id: my_progress_bar
            value: .20
            min: 0
            max: 1
            size_hint_x: 1


            canvas:
              BorderImage:
                border: (12, 12, 12, 12)
                pos: self.x, self.center_y - 12
                size: self.width, 24
                source: 'images/background_color_pb.png'
              BorderImage:
                border: [int(min(self.width * (self.value / float(self.max)) if self.max else 0, 12))] * 4
                pos: self.x, self.center_y - 12
                size: self.width * (self.value / float(self.max)) if self.max else 0, 24
                source: 'images/progress_color_pb.png'

        BoxLayout:
          padding: [0, -60, 0,0]
          Label:
            id: my_label
            text: 'Vraag 1 / 5'
            font_size: 35
            size: 400, 500
            value: 1

        BoxLayout:
          padding: [0, -10, 0 ,0]
          Label:
            id: my_label_question
            text: 'Wie heeft een telescoop lens uit gevonden?'
            text_size: self.width, None
            font_size: dp(35)
            valign: 'middle'
            halign: 'center'

      BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: dp(50)

        canvas:
          Color:
            rgba: (0,0,0,1)
          Rectangle:
            pos: self.pos
            size: self.size



      BoxLayout:
        id: info_scherm
        orientation: 'vertical'
        padding: [dp(100), 0, dp(100), 0]

        canvas:
          Color:
            rgba: (21/255,21/255,21/255,1)
          Rectangle:
            pos: self.pos
            size: self.size

        GridLayout:
          cols: 1
          id: intro
          paddings: [0, 400, 0, 10]
          size: self.size
          pos: self.pos

          Label:
            text: 'Vind het juiste object bij de vraag. Als u een object op pakt krijgt u extra informatie op het scherm.'
            halign: 'center'
            valign: 'middle'
            font_size: dp(50)
            size_hint_y: None
            height: dp(200)
            text_size: self.width, None

          Label:
            halign: 'center'
            valign: 'middle'
            text: 'Denkt u dat het object het antwoord is op de vraag zet het dan op het antwoordvlak. Als het niet het goede antwoord is zet het object dan weer terug op zijn plek.'
            font_size: dp(50)
            size_hint_y: None
            text_size: self.width, None
