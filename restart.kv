<RestartPopup>:
	title: ""
	size_hint: (None, None)
	size: (300,200)
	separator_height: 0

	BoxLayout:
        id: restartLayout
		orientation: 'vertical'
		size_hint_y: 1
		Label:
			text: "Momentje geduld..."
            font_size: 50
		Label:
			text: "Nieuwe selectie vragen worden gekozen"
            valign: 'middle'
            halign: 'center'
            id: restartLayoutText
            font_size: 40
